generator client {
  provider = "prisma-client-js"
  output   = "../src/lib/prisma/generated"
  seed     = "ts-node --transpile-only prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  firstName   String
  lastName    String
  phoneNumber Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id                 String   @id @default(uuid())
  name               String
  ingredients        String[]
  instructions       String[]
  mealType           String[]
  prepTimeMinutes    Int?
  cookTimeMinutes    Int?
  servings           Int
  reviewCount        Int
  caloriesPerServing Int
  tags               String[]
  rating             Float
  difficulty         String
  cuisine            String
  image              String
}
